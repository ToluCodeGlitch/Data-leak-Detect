body {
  margin: 0;
  font-family: 'Orbitron', sans-serif;
  background: radial-gradient(circle at center, #0f172a 0%, #000000 100%);
  color: #e0f7fa;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

.container {
  max-width: 600px;
  width: 90%;
  padding: 2rem;
  background-color: rgba(0, 0, 30, 0.6);
  border-radius: 10px;
  box-shadow: 0 0 25px rgba(0, 183, 255, 0.3);
  text-align: center;
}

header h1 {
  font-size: 2.2rem;
  margin-bottom: 0.5rem;
  color: #00bfff;
}

header p {
  font-size: 1rem;
  color: #a2d9ff;
}

form {
  margin-top: 2rem;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

input[type="text"] {
  padding: 1rem;
  border: none;
  border-radius: 5px;
  font-size: 1rem;
  outline: none;
}

button {
  background-color: #00bfff;
  border: none;
  padding: 1rem;
  font-size: 1rem;
  color: black;
  border-radius: 5px;
  cursor: pointer;
  transition: background 0.3s ease;
}

button:hover {
  background-color: #009acd;
}

#results {
  margin-top: 2rem;
  animation: fadeIn 0.6s ease;
}

#output {
  background-color: #001f3f;
  padding: 1rem;
  border-radius: 6px;
  margin-top: 1rem;
  font-size: 0.95rem;
  line-height: 1.5;
  color: #ffffff;
  text-align: left;
}

footer {
  margin-top: 2rem;
  font-size: 0.8rem;
  color: #8ecae6;
}

.hidden {
  display: none;
}

@keyframes fadeIn {
  from {opacity: 0;}
  to {opacity: 1;}
}
